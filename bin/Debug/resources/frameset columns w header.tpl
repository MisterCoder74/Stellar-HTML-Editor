<!-- In this frameset, the 2nd column is divided in 2 rows (1 header - 1 main)-->
<!-- delete 'noresize' to resize frames or set frameborder to 0 for bordless frames-->
<!-- set the wanted percentage of columns and header-->

<frameset rows="100%" cols="20%,*">
	<frame name="menu" src="" scrolling="auto" noresize frameborder="1">
	<frameset rows="20%,*">
		<frame name="header" src="" scrolling="auto" noresize frameborder="1">
		<frame name="main" src="" scrolling="auto" noresize frameborder="1">
	</frameset>
</frameset>