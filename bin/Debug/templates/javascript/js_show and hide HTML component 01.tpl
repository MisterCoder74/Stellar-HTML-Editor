<!-- This script hides and shows the element by making it invisible and visible (object is NOT removed) -->
<p id="showhide">(Content you want to show and hide)</p>
<button type="button" onclick="document.getElementById('showhide').style.visibility='hidden'">Hide element!</button>
<button type="button" onclick="document.getElementById('showhide').style.visibility='visible'">Show element!</button>
