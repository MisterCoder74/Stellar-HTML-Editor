<!-- This script hides and shows the element by removing it and relocating it (object is removed) -->
<p id="showhide">(Content you want to show and hide)</p>
<button type="button" onclick="document.getElementById('showhide').style.display='none'">Hide element</button>
<button type="button" onclick="document.getElementById('showhide').style.display='block'">Show element</button>
